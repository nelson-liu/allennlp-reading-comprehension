{
  "dataset_reader": {
    "type": "cnn_dm"
  },
  "train_data_path": "test_fixtures/data/cnn_dm.jsonl",
  "validation_data_path": "test_fixtures/data/cnn_dm.jsonl",
  "model": {
    "type": "stanford_attentive_reader",
    "text_field_embedder": {
      "token_embedders": {
        "tokens": {
            "type": "embedding",
            "embedding_dim": 2,
            "trainable": false
        }
      }
    },
    "question_encoder": {
        "type": "lstm",
        "input_size": 2,
        "hidden_size": 10,
        "num_layers": 1,
        "bidirectional": true
    },
    "context_encoder": {
        "type": "lstm",
        "input_size": 2,
        "hidden_size": 10,
        "num_layers": 1,
        "bidirectional": true
    },
    "matrix_attention": {
      "type": "bilinear",
      "matrix_1_dim": 20,
      "matrix_2_dim": 20
    }
  },
  "data_loader": {
    "batch_sampler": {
    "type": "bucket",
    "padding_noise": 0.0,
    "batch_size": 40
    },
  },
  "trainer": {
    "num_epochs": 1,
    "grad_norm": 10.0,
    "patience" : 12,
    "cuda_device" : -1,
    "optimizer": {
      "type": "adadelta",
      "lr": 0.5,
      "rho": 0.95
    }
  }
}
